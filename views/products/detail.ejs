                      <%
                    break;
                    default:
                      break;
                  } %>
                  
                 
                <% }) %>
              </div>
            </div>
            <div class="_producto-sizes">
              <span class="_titulo-sizes">Talles</span>
              <div class="_sizes">
                <% productFound.Sizes.forEach(size=>{%>
                  <button class="_size"><%= size.name%></button>
                  
                  <%}) %>
              </div>
            </div>
            <div class="_producto-botones">
              <button class="_boton _boton-aniadir">
                <i class="fa-solid fa-bag-shopping"></i> Añadir a carrito
              </button>
              <button class="_boton _boton-comprar">Comprar ahora</button>
              <% if (locals.isAdmin) { %>
                <a href="/products/edit/<%= productFound.id %>">
                  <button class="_boton _boton-comprar">Editar producto</button>
                </a>
                <form action="/products/delete/<%= productFound.id %>?__method=DELETE" method="post">
                  <button class="_boton _boton-comprar">Borrar producto</button>
                </form>
              <% } %>
            </div>
          </div>
