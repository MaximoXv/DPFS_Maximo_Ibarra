<!DOCTYPE html>
<html lang="es">
  <%- include("../partials/head.ejs", {style: "login", title: "Iniciar Sesion"})
  %>

  <body class="_body">
    <div class="_errors"></div>
    <main class="_main">
      <form action="/users/login" method="post" class="_login">
        <h1 class="_titulo-login">Login</h1>
        <div class="_input-field">

          <label class="_label" for="email">Email</label>
          <input class="_input" type="email" name="email" id="email" value="<%= locals.old?.email ? old.email : ''  %>"/>
          <% if (locals.errors?.email) { %>
            <p class="error"><%= locals.errors.email.msg %></p>
            <% } %>
          </div>
          <div class="_input-field">

            <label class="_label" for="password">Contraseña</label>
            <input
            class="_input"
            type="password"
            name="password"
            id="password"
            value="<%= locals.old?.password ? old.password : ''  %>"
            />
            <% if (locals.errors?.password) { %>
              <p class="error"><%= locals.errors.password.msg %></p>
              <% } %>
            </div>
        <div class="_mantener-sesion">
          <label class="_label" for="remember_me">Mantener sesión activa</label>
          <input
            class="_input"
            type="checkbox"
            name="remember_me"
            id="remember_me"
          />
        </div>
        <a class="_link-olvidaste" href="/">Olvidaste tu contraseña?</a>
        <button class="_boton-ingresar">Ingresar</button>
        <span class="_texto-o">o</span>
        <div class="_google">
          <button class="_boton-google">
            <img class="_imagen-google" src="/images/logo_google.jpg" alt="" />
            Ingresar con Google
          </button>
        </div>
        <span class="_texto-nuevo"
          >Eres nuevo?
          <a class="_link-nuevo" href="/users/register"
            >Crea una cuenta</a
          ></span
        >
      </form>
    </main>
    <script src="https://unpkg.com/validator@latest/validator.min.js"></script>
    <script src="/js/validations/login.js"></script>
  </body>
</html>
